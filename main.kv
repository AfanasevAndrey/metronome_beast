<MainWidget>:
    orientation: 'vertical'
    padding: 20
    spacing: 20

    bpm_input: bpm
    beats_input: beats
    accent_enabled: acсent

    TextInput:
        multiline: False
        size_hint: (.5, None)
        pos_hint:{"center_x":0.5, "top":1}
        height: 50
        font_size: 30
        id: bpm

    TextInput:
        multiline: False
        size_hint: (.5, None)
        pos_hint:{"center_x":0.5, "top":1}
        height: 50
        font_size: 30
        id: beats

    CheckBox:
        color:.294, .761, .623
        #on_active: root.checkbox_click(self, self.active)
        size_hint_x: .20
        id: acсent

    Button:
        font_size: 30
        text: 'Старт'
        size_hint: (.5, None)
        pos_hint:{"center_x":0.5, "top":1}

        on_press: root.tick_threaded(True)

    Button:
        font_size: 30
        text: 'Стоп'
        size_hint: (.5, None)
        pos_hint:{"center_x":0.5, "top":1}

        on_press: root.tick_threaded(False)


